<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity UserOrganization.
    -->
    <changeSet id="20221130094030-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_organization"
                                 constraintName="fk_user_organization__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_proxy"/>

        <addForeignKeyConstraint baseColumnNames="organization_id"
                                 baseTableName="user_organization"
                                 constraintName="fk_user_organization__organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="organization"/>

        <addForeignKeyConstraint baseColumnNames="user_proxy_id"
                                 baseTableName="user_organization"
                                 constraintName="fk_user_organization__user_proxy_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_proxy"/>
    </changeSet>
</databaseChangeLog>
