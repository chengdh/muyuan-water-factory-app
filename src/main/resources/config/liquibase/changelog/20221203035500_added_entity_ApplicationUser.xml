<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity ApplicationUser.
    -->
    <changeSet id="20221203035500-1" author="jhipster">
        <createTable tableName="application_user">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="real_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="internal_user_id" type="bigint">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_application_user__internal_user_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20221203035500-1-relations" author="jhipster">

        <createTable tableName="rel_application_user__organizaitons">
            <column name="organizaitons_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="application_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="application_user_id, organizaitons_id" tableName="rel_application_user__organizaitons" />

        <createTable tableName="rel_application_user__roles">
            <column name="roles_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="application_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="application_user_id, roles_id" tableName="rel_application_user__roles" />
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20221203035500-1-data" author="jhipster">
        <loadData
            file="config/liquibase/data/application_user.csv"
            separator=";"
            tableName="application_user"
            usePreparedStatements="true">
            <column name="id" type="numeric" />
            <column name="real_name" type="string" />
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
        <loadData
            file="config/liquibase/data/application_user_organization.csv"
            separator=";"
            tableName="rel_application_user__organizaitons"
            usePreparedStatements="true">
            <column name="application_user_id" type="numeric" />
            <column name="organization_id" type="numeric" />
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
        <loadData
            file="config/liquibase/data/application_user_role.csv"
            separator=";"
            tableName="rel_application_user__role"
            usePreparedStatements="true">
            <column name="application_user_id" type="numeric" />
            <column name="role_id" type="numeric" />
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>

    </changeSet>
</databaseChangeLog>